<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Alert_dialog_fragmentViewProduct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/productName"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/description"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/productDescribe"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <ImageButton
            android:id="@+id/pluseButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:src="@drawable/baseline_add_24"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_circle_btn"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:weight="1"/>

        <EditText
            android:id="@+id/digitEditText"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/minusButton"
            android:layout_toRightOf="@id/pluseButton"
            android:inputType="number"
            android:text="@string/quantity"
            android:textAlignment="center"
            android:textSize="20sp"
            android:background="@drawable/edittext_outline"
            android:weight="1"
            />


        <ImageButton
            android:id="@+id/minusButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:src="@drawable/baseline_remove_24"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_circle_btn"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/addbtn"
            android:layout_marginRight="90dp"
            android:weight="1"

            />


        <Button
            android:id="@+id/addbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addToCart"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="#404040"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            />
    </RelativeLayout>

</LinearLayout>
